- provide(:title, "Instelling #{@setting.var}")

.card.card-body
  = bootstrap_form_for @setting, url: admin_setting_path(@setting.var), method: 'patch', layout: :horizontal, label_col: "col-sm-3", control_col: "col-sm-9" do |f|
    = f.text_area :value, label: @setting.var, value: @setting.value

    div
      = f.submit "Opslaan", class: 'btn btn-primary btn-inline'
      = link_to "Annuleren", [:admin, :settings], class: 'btn btn-outline-secondary btn-inline'
