= simple_form_for [:admin, @version_update], {wrapper: :horizontal_form} do |f|
  = f.error_notification

  = f.input :name
  = f.input :body, hint: 'Gebruik <a href="https://en.support.wordpress.com/markdown-quick-reference/" target="_new">Markdown</a> bij het opmaken van de tekst'.html_safe
  = render 'shared/input/datepicker', f: f, field: :released_at

  = f.input :for_role
  
  div
    = f.button :submit, "Opslaan", class: 'btn btn-primary btn-inline'
    - if policy(@version_update).destroy?
      = link_to "Verwijderen", admin_version_update_path(@version_update),  method: :delete, data: { confirm: 'Versie wordt verwijderd. Doorgaan?' }, class: 'btn btn-danger btn-inline'
    = link_to "Annuleren", [:admin, :version_updates], class: 'btn btn-secondary-outline btn-inline'
