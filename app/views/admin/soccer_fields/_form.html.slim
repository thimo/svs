= bootstrap_form_for [:admin, @soccer_field], layout: :horizontal, label_col: "col-sm-3", control_col: "col-sm-9" do |f|
  = f.alert_message "Controleer alsjeblieft de fouten hieronder:"

  = f.text_field :name, autofocus: true

  = f.form_group
    .checkbox-toggle
      = f.check_box :match, class: 'checkbox-toggle'
    = f.check_box :training, { class: 'checkbox-toggle', custom: true }

  div
    = f.submit "Opslaan", class: 'btn btn-primary btn-inline'
    - if policy(@soccer_field).destroy?
      = link_to "Verwijderen", admin_soccer_field_path(@soccer_field),  method: :delete, data: { confirm: 'Veld wordt verwijderd. Doorgaan?' }, class: 'btn btn-danger btn-inline'
    = link_to "Annuleren", [:admin, :soccer_fields], class: 'btn btn-secondary-outline btn-inline'
