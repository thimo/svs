- provide(:title, "Wedstrijdsoorten")

section.box-typical
  header.box-typical-header
    .tbl-row
      .tbl-cell.tbl-cell-title
        h3
          | Wedstrijdsoorten
        .small Voer de soorten wedstrijden in die je handmatig wil toevoegen, zoals "Oefenwedstrijden" of "Toernooien"
      - if policy(Competition).create?
        .tbl-cell.tbl-cell-actions
          = link_to new_admin_competition_path, title: "Toevoegen", class: "action-btn"
            i.far.fa-file

  .box-typical-body.table-responsive
    table.table.table-sm.tr-links
      thead
        tr
          th = Competition.human_attribute_name(:competitienaam)
          th = Competition.human_attribute_name(:competitiesoort)
      tbody
        - @competitions.each do |competition|
          tr
            td
              = link_to competition.competitienaam, edit_admin_competition_path(competition)
            td
              = competition.competitiesoort
