- team ||= parent.team

- if policy(parent).show_presences? && (present_size = parent.present_size_for_label(team)) > 0
  - if policy(parent).update_presences?
    a.presences-toggle.dropdown-toggle.label.p-2.ml-1[
      tabindex="0"
      id="#{parent.model_name.singular}-#{parent.id}-presence-count"
      data-content-url="#{url_for [parent, :presences, team: team]}"
      data-target-id="presences-#{parent.model_name.singular}-#{parent.id}"]
      = present_size

  - else
    .label.ml-1[title="Aanwezig"]
      = present_size
