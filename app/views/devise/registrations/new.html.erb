<h1><%= t('.sign_up', default: 'Sign up') %></h1>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { role: 'form' }) do |f| %>
  <%= f.error_notification %>

  <%= f.input :email, autofocus: true, class: 'form-control' %>
  <%= f.input :password, class: 'form-control' %>
  <%= f.input :password_confirmation, class: 'form-control' %>

  <%= f.button :submit, t('.sign_up', default: 'Sign up'), class: 'btn btn-primary' %>
<% end %>

<%= render 'devise/shared/links' %>
