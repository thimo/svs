        li.nav-item.dropdown
          a#dropdown01.nav-link.dropdown-toggle[href="http://example.com" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"]
            = current_user.name
          .dropdown-menu[aria-labelledby="dropdown01"]
            a.dropdown-item[href="#"]
